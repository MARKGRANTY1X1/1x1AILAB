{
  "name": "crypto-mining--2real",
  "private": true,
  "version": "0.0.0",
  "main": "main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:web": "vite build",
    "preview": "vite preview",
    "start": "electron .",
    "dist": "electron-builder --win nsis --x64"
  },
  "dependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "recharts": "^3.3.0",
    "dayjs": "^1.11.18",
    "react-qr-code": "^2.0.18"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.cryptomining.desktop",
    "productName": "Crypto Mining Dashboard",
    "files": [
      "dist/**/*",
      "main.js",
      "package.json",
      "node_modules/**/*"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.ico"
    }
  }
}
